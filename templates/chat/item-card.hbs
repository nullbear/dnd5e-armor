<div class="dnd5a2 chat-card item-card" data-actor-id="{{ actor.id }}" data-item-id="{{ item.id }}"
     {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}} {{#if isSpell}}data-spell-level="{{ item.system.level }}"{{/if}}>

    {{!-- Collapsible Item Details --}}
    <section class="card-header description collapsible">

        {{!-- Summary --}}
        <header class="summary">
            <img class="gold-icon" src="{{ item.img }}" alt="{{ item.name }}">
            <div class="name-stacked border">
                <span class="title">{{ item.name }}</span>
                {{#if (or data.subtitle item.system.chatFlavor)}}
                <span class="subtitle">
                    {{#if item.system.chatFlavor}}{{ item.system.chatFlavor }}
                    {{else}}{{{ data.subtitle }}}{{/if}}
                </span>
                {{/if}}
            </div>
            <i class="fas fa-chevron-down fa-fw"></i>
        </header>

        {{!-- Details --}}
        <section class="details collapsible-content card-content">
            <div class="wrapper">
                {{{ data.description.chat }}}
            </div>
        </section>
    </section>

    {{!-- Item Actions --}}
    {{#if hasButtons}}
    <div class="card-buttons">

        {{!-- Attacks --}}
        {{#if hasAttack}}
        <button type="button" data-action="attack">
            <i class="dnd5a-icon" data-src="systems/dnd5a/icons/svg/trait-weapon-proficiencies.svg"></i>
            {{ localize "DND5A.Attack" }}
        </button>
        {{/if}}

        {{!-- Damage / Healing --}}
        {{#if hasDamage}}
        <button type="button" data-action="damage">
            {{#if isHealing}}
            <i class="dnd5a-icon" data-src="systems/dnd5a/icons/svg/damage/healing.svg"></i>
            {{ localize "DND5A.Healing" }}
            {{else}}
            <i class="fas fa-burst"></i>
            {{ localize "DND5A.Damage" }}
            {{/if}}
        </button>
        {{/if}}

        {{!-- Versatile --}}
        {{#if isVersatile}}
        <button type="button" data-action="versatile">
            <i class="dnd5a-icon" data-src="systems/dnd5a/icons/svg/versatile.svg"></i>
            {{ localize "DND5A.Versatile" }}
        </button>
        {{/if}}

        {{!-- Saving Throw --}}
        {{#if hasSave}}
        {{#with item.system.save}}
        <button type="button" data-action="save" data-ability="{{ ability }}" data-dc="{{ dc }}">
            <i class="fas fa-shield-heart"></i>
            {{#with (lookup (lookup @root.config.abilities ability) "label") as |abilityLabel|}}
            <span class="visible-dc">{{ localize "DND5A.SavingThrowDC" dc=../dc ability=abilityLabel }}</span>
            <span class="hidden-dc">{{ localize "DND5A.SavePromptTitle" ability=abilityLabel }}</span>
            {{/with}}
        </button>
        {{/with}}
        {{/if}}

        {{!-- Other Formula --}}
        {{#if item.system.formula}}
        <button type="button" data-action="formula">
            <i class="fas fa-ellipsis"></i>
            {{ localize "DND5A.OtherFormula"}}
        </button>
        {{/if}}

        {{!-- Templates --}}
        {{#if hasAreaTarget}}
        <button type="button" data-action="placeTemplate">
            <i class="fas fa-bullseye"></i>
            {{ localize "DND5A.PlaceTemplate" }}
        </button>
        {{/if}}

        {{!-- Summoning --}}
        {{#if item.system.hasSummoning}}
        <button type="button" data-action="summon">
            <i class="fa-solid fa-spaghetti-monster-flying"></i>
            {{ localize "DND5A.Summoning.Action.Summon" }}
        </button>
        {{/if}}

        {{!-- Tool Check --}}
        {{#if isTool}}
        <button type="button" data-action="toolCheck" data-ability="{{ item.system.ability }}">
            <i class="fas fa-hammer"></i>
            {{ localize "DND5A.UseItem" item=item.name }}
        </button>
        {{/if}}

        {{!-- Ability Check --}}
        {{#if hasAbilityCheck}}
        <button type="button" data-action="abilityCheck" data-ability="{{ item.system.ability }}">
            <i class="dnd5a-icon" data-src="systems/dnd5a/icons/svg/ability-score-improvement.svg"></i>
            {{ labels.abilityCheck }}
        </button>
        {{/if}}

        {{!-- Consume Use --}}
        {{#if consumeUsage}}
        <button type="button" data-action="consumeUsage">
            <i class="fa-solid fa-xmarks-lines" inert></i>
            {{ localize "DND5A.AbilityUseConsumeAction" }}
        </button>
        {{/if}}

        {{!-- Consume Resource --}}
        {{#if consumeResource}}
        <button type="button" data-action="consumeResource">
            <i class="fa-solid fa-cubes-stacked" inert></i>
            {{ localize "DND5A.ConsumeResourceAction" }}
        </button>
        {{/if}}
    </div>
    {{/if}}

    {{!-- Reactions --}}
    {{#if (and data.activation.condition (eq data.activation.type "reaction"))}}
    <p class="supplement"><strong>{{ localize "DND5A.Reaction" }}</strong>{{ data.activation.condition }}</p>
    {{/if}}

    {{!-- Materials --}}
    {{#if data.materials.value}}
    <p class="supplement"><strong>{{ localize "DND5A.Materials" }}</strong>{{ data.materials.value }}</p>
    {{/if}}

    {{!-- Item Properties --}}
    {{#if data.hasProperties}}
    <ul class="card-footer pills unlist">
        {{#each data.tags}}
        <li class="pill transparent">
            <span class="label">{{ this }}</span>
        </li>
        {{/each}}
        {{#each data.properties}}
        <li class="pill transparent">
            <span class="label">{{ this }}</span>
        </li>
        {{/each}}
    </ul>
    {{/if}}

    {{!-- Applicable Effects --}}
    <div class="card-tray effects-tray collapsible collapsed">
        <label class="roboto-upper">
            <i class="fas fa-bolt"></i>
            <span>{{ localize "DND5A.Effects" }}</span>
            <i class="fas fa-caret-down"></i>
        </label>
        <div class="collapsible-content">
            <ul class="effects unlist wrapper">
                {{~#each effects~}}
                <li class="effect" data-effect-id="{{ id }}" data-uuid="{{ uuid }}" data-transferred="{{ transfer }}">
                    <img class="gold-icon" alt="{{ name }}" src="{{ img }}">
                    <div class="name-stacked">
                        <span class="title">{{ name }}</span>
                        <span class="subtitle">{{ duration.label }}</span>
                    </div>
                    <button type="button" class="apply-effect" data-action="applyEffect"
                            data-tooltip="DND5A.EffectsApplyTokens" aria-label="{{ localize "DND5A.EffectsApplyTokens" }}">
                        <i class="fas fa-reply-all fa-flip-horizontal"></i>
                    </button>
                </li>
                {{~/each~}}
            </ul>
        </div>
    </div>
</div>
