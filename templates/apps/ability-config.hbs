<form autocomplete="off">
    <p class="notes">{{localize "DND5A.AbilityConfigurationHint"}}</p>
    <h3 class="form-header">{{labelSaves}}</h3>
    <div class="form-group">
        <label>{{ localize "DND5A.ProficiencyLevel" }}</label>
        <select name="system.abilities.{{abilityId}}.proficient" data-dtype="Number">
            {{selectOptions proficiencyLevels selected=ability.proficient}}
        </select>
    </div>
    <div class="form-group">
        <label>{{ localize "DND5A.AbilityScoreMax" }}</label>
        <input name="system.abilities.{{abilityId}}.max" type="number" value="{{ability.max}}">
    </div>
    <div class="form-group">
        <label>{{localize "DND5A.SaveBonus"}}</label>
        <input name="system.abilities.{{abilityId}}.bonuses.save" type="text" value="{{ability.bonuses.save}}">
    </div>
    <hr>
    <div class="form-group">
        <label>{{localize "DND5A.BonusAbilitySave"}}</label>
        <input name="system.bonuses.abilities.save" type="text" value="{{bonusGlobalSave}}">
        <p class="notes">{{localize "DND5A.SaveGlobalBonusHint"}}</p>
    </div>

    <h3 class="form-header">{{labelChecks}}</h3>
    <div class="form-group">
        <label>{{localize "DND5A.AbilityCheckBonus"}}</label>
        <input name="system.abilities.{{abilityId}}.bonuses.check" type="text" value="{{ability.bonuses.check}}">
    </div>
    <hr>
    <div class="form-group">
        <label>{{localize "DND5A.BonusAbilityCheck"}}</label>
        <input name="system.bonuses.abilities.check" type="text" value="{{bonusGlobalCheck}}"/>
        <p class="notes">{{localize "DND5A.AbilityCheckGlobalBonusHint"}}</p>
    </div>

    <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
