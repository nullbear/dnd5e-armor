<div class="textbox {{ class }}">
    <h3 class="icon">
        {{#if icon}}<i class="{{ icon }}"></i>
        {{~else if svg}}<dnd5a-icon src="systems/dnd5a/icons/svg/{{ svg }}.svg"></dnd5a-icon>{{/if}}
        <span class="roboto-upper">{{ localize label }}</span>
    </h3>
    {{#if @root.editable}}
    <textarea class="untext" name="{{ name }}">{{ value }}</textarea>
    {{else}}
    <p>{{ dnd5a-textFormat value }}</p>
    {{/if}}
</div>
